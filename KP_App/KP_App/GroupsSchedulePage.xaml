<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KP_App.GroupsSchedulePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Image x:Name="LogoImage"/>
                <Label Text="Название приложения" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
            <StackLayout>
                <Picker Title="Выберите группу: "/>
                <TableView Intent="Data">
                    <TableRoot>
                        <TableSection TextColor="Black" Title="Понедельник">
                            <TextCell Text="1-я пара"  Detail="5 каб."/>
                            <TextCell Text="2-я пара"  Detail="8 каб."/>
                            <TextCell Text="3-я пара"  Detail="3 каб."/>
                            <TextCell Text="4-я пара" Detail="10 каб."/>
                        </TableSection>
                        <TableSection TextColor="Black" Title="Вторник">
                            <TextCell Text="1-я пара"  Detail="4 каб."/>
                            <TextCell Text="2-я пара"  Detail="10 каб."/>
                            <TextCell Text="3-я пара"  Detail="8 каб."/>
                            <TextCell Text="4-я пара" Detail="12 каб."/>
                        </TableSection>
                        <TableSection TextColor="Black" Title="Среда">
                            <TextCell Text="1-я пара"  Detail="8 каб."/>
                            <TextCell Text="2-я пара"  Detail="3 каб."/>
                            <TextCell Text="3-я пара"  Detail="12 каб."/>
                            <TextCell Text="4-я пара" Detail="15 каб."/>
                        </TableSection>
                        <TableSection TextColor="Black" Title="Четверг">
                            <TextCell Text="1-я пара"  Detail="23 каб."/>
                            <TextCell Text="2-я пара"  Detail="10 каб."/>
                            <TextCell Text="3-я пара"  Detail="15 каб."/>
                            <TextCell Text="4-я пара" Detail="10 каб."/>
                        </TableSection>
                        <TableSection TextColor="Black" Title="Пятница">
                            <TextCell Text="1-я пара"  Detail="5 каб."/>
                            <TextCell Text="2-я пара"  Detail="7 каб."/>
                            <TextCell Text="3-я пара"  Detail="3 каб."/>
                            <TextCell Text="4-я пара" Detail="10 каб."/>
                        </TableSection>
                    </TableRoot>
                </TableView>
            </StackLayout>
            <Button Text="Просмотр личного расписания" Clicked="ButtonTeacherPage_Clicked"/>
            <Button Text="Просмотр учебных материалов" Clicked="ButtonMaterials_Clicked"/>
            <Button Text="Просмотр домашних заданий" Clicked="ButtonHomework_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>