<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KP_App.GuestPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Image Source=""/>
                <Label Text="Название приложения" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Picker x:Name="PickGroups" FontSize="25" IsVisible="true" FontFamily="Times New Roman" Title="Выберите группу" HorizontalOptions="StartAndExpand"/>
                <Button Text="Найти" HorizontalOptions="End"/>
            </StackLayout>
            <Label Text="Здесь будет расписание"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>