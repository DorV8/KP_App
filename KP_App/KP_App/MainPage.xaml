<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KP_App.MainPage">

    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Image x:Name="LogoImage"/>
            <Label Text="Название приложения" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Entry x:Name="LoginField" Placeholder="Логин" />
            <Entry x:Name="PassField" Placeholder="Пароль" IsPassword="True" />
            <Button x:Name="EnterButton" Text="Войти" Clicked="ButtonEnterClick"/>
            <Button x:Name="GuestEnter" Text="Войти как гость" Clicked="ButtonGuestEnterClick"/>
        </StackLayout>
        <Button x:Name="Stud" Text="Войти как студент" Clicked="Stud_Clicked"/>
        <Button x:Name="Teacher" Text="Войти как преподаватель" Clicked="Teacher_Clicked"/>
    </StackLayout>
</ContentPage>
